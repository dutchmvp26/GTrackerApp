@page
@model GTracker.Pages.CreateModel
@{
    ViewData["Title"] = "Add Game";
}

<h1>Add New Game</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="NewGame.Id" />
    <div class="mb-3">
        <label asp-for="NewGame.Title" class="form-label">Title</label>
        <input asp-for="NewGame.Title" class="form-control" />
        <span asp-validation-for="NewGame.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewGame.Platform" class="form-label">Platform</label>
        <input asp-for="NewGame.Platform" class="form-control" />
        <span asp-validation-for="NewGame.Platform" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewGame.releaseYear" class="form-label">Release Year</label>
        <input asp-for="NewGame.releaseYear" type="number" class="form-control" min="1950" max="2100" />
        <span asp-validation-for="NewGame.releaseYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewGame.Genre" class="form-label">Genre</label>
        <input asp-for="NewGame.Genre" class="form-control" />
        <span asp-validation-for="NewGame.Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewGame.Status" class="form-label">Status</label>
        <select asp-for="NewGame.Status" class="form-select" asp-items="Html.GetEnumSelectList<GTracker.Models.GameStatus>()"></select>
    </div>
     <div class="mb-3">
            <label class="form-label">Box Art</label>

            @if (Model.NewGame?.BoxArt != null)
            {

                <div class="small text-success mb-1">
                    ✔ An image is already uploaded
                </div>

                <div class="mb-2">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.NewGame.BoxArt)"
                         class="img-fluid rounded shadow"
                         style="max-width:400px;"
                         alt="Current Box Art" />
                    <div class="text-muted small">
                        Current image (already saved)
                    </div>
                </div>
            }

            <input type="file"
                   asp-for="UploadedImage"
                   class="form-control" />
                    <span asp-validation-for="UploadedImage" class="text-danger"></span>

            <small class="form-text text-muted">
                Choose a new image only if you want to replace the current one
            </small>
        </div>


    <div class="mb-3">
        <label asp-for="NewGame.Notes" class="form-label">Notes</label>
        <textarea asp-for="NewGame.Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="NewGame.Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Game</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

