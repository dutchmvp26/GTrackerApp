@page
@model GTracker.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4" style="max-width: 900px;">
    <h1 class="mb-3">Profile</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model.User == null)
    {
        <div class="alert alert-danger">User not found.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-4">
                    <!-- LEFT: Profile picture -->
                    <div class="col-md-4">
                        <h5 class="mb-3">Profile Picture</h5>

                        <div class="mb-3">
                            @* Current saved picture *@
                            @if (Model.User.PFP != null && Model.User.PFP.Length > 0)
                            {
                                <img id="currentPhoto"
                                     src="data:image/jpeg;base64,@Convert.ToBase64String(Model.User.PFP)"
                                     class="img-fluid rounded shadow"
                                     style="width: 220px; height: 220px; object-fit: cover;"
                                     alt="Profile picture" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center rounded shadow"
                                     style="width: 220px; height: 220px; background:#0d223a; border: 1px solid #1c3a5c;">
                                    <span class="text-muted">No photo</span>
                                </div>
                            }
                        </div>

                        @* Preview of newly selected picture *@
                        <div class="mb-3" style="display:none;" id="previewWrapper">
                            <div class="small text-muted mb-1">Preview (not saved yet)</div>
                            <img id="previewImg"
                                 class="img-fluid rounded shadow"
                                 style="width: 220px; height: 220px; object-fit: cover;"
                                 alt="New profile preview" />
                        </div>

                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-2">
                                <label class="form-label">Upload new photo</label>
                                <input type="file"
                                       asp-for="UploadedImage"
                                       class="form-control"
                                       accept="image/*"
                                       onchange="previewSelectedImage(this)" />
                                <span asp-validation-for="UploadedImage" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    Save Photo
                                </button>

                                @* Optional: if you implement "remove photo" in OnPostRemove *@
                                <button type="submit"
                                        formaction="?handler=Remove"
                                        class="btn btn-outline-danger">
                                    Remove Photo
                                </button>
                            </div>
                        </form>

                        <div class="form-text mt-2">
                            Make sure the uploaded image has a resolution of 400x400 or lower.
                        </div>
                    </div>

                    <!-- RIGHT: Profile info -->
                    <div class="col-md-8">
                        <h5 class="mb-3">Account Info</h5>

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input class="form-control-plaintext text-light" value="@Model.User.Username" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control-plaintext text-light" value="@Model.User.Email" readonly />
                        </div>

                        @* Optional: add other profile fields here *@
                        <div class="mt-3">
                            <a asp-page="/Index" class="btn btn-secondary">Back to game list</a>
                        </div>

                        <hr class="my-4" />
                        </div>
                    </div>
                </div>
            </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewSelectedImage(input) {
            const wrapper = document.getElementById("previewWrapper");
            const img = document.getElementById("previewImg");

            if (!input.files || input.files.length === 0) {
                wrapper.style.display = "none";
                img.src = "";
                return;
            }

            const file = input.files[0];
            const reader = new FileReader();
            reader.onload = function (e) {
                img.src = e.target.result;
                wrapper.style.display = "block";
            };
            reader.readAsDataURL(file);
        }
    </script>
}
