@page "{id:int}"
@model GTracker.Pages.ViewModel
@{
    ViewData["Title"] = "View Details";
}

<h1>Game Details</h1>

@if (Model.Game != null)
{
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Game.Title</h4>
            <h6 class="card-subtitle text-muted">@Model.Game.Platform</h6>

            <hr />

            <p><strong>Genre:</strong> @Model.Game.Genre</p>
            <p><strong>Release Year:</strong> @Model.Game.releaseYear</p>
            <p><strong>Status:</strong> @Model.Game.Status.GetDisplayName()</p>

            @if (!string.IsNullOrEmpty(Model.Game.Notes))
            {
                <div class="mt-3">
                    <h5>Notes</h5>
                    <p class="border rounded p-2 bg-light">@Model.Game.Notes</p>
                </div>
            }
            else
            {
                <p class="text-muted">No notes added for this game.</p>
            }

            <h5 class="mt-4">Box Art</h5>

            @if (Model.Game?.BoxArt != null && Model.Game.BoxArt.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Game.BoxArt)"
                     class="img-fluid rounded shadow"
                     style="max-width:400px;"
                     alt="Game Box Art" />
            }
            else
            {
                <p class="text-muted">No box art uploaded.</p>
            }

            <h5 class="mt-4">Screenshot</h5>

            @if (Model.Game?.Screenshot != null && Model.Game.Screenshot.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Game.Screenshot)"
                     class="img-fluid rounded shadow"
                     alt="Game Screenshot" />
            }
            else
            {
                <p class="text-muted">No screenshot uploaded.</p>
            }

            <div class="mt-3">
                <a asp-page="/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger">Game not found.</p>
}
