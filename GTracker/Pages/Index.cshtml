@page
@using GTracker.Models
@model GTracker.Pages.IndexModel
@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<p>
    <a asp-page="./Create" class="btn btn-success mb-3">Add new game</a>
</p>

<form method="get" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" id="Title" name="Title" value="@Model.Title" class="form-control" placeholder="Search by title" />
        </div>

        <div class="col-md-2">
            <label for="ReleaseYear" class="form-label">Year</label>
            <input type="number" id="ReleaseYear" name="ReleaseYear" value="@Model.ReleaseYear" class="form-control" />
        </div>

        <div class="col-md-2">
            <label for="Genre" class="form-label">Genre</label>
            <input type="text" id="Genre" name="Genre" value="@Model.Genre" class="form-control" />
        </div>

        <div class="col-md-2">
            <label for="Platform" class="form-label">Platform</label>
            <input type="text" id="Platform" name="Platform" value="@Model.Platform" class="form-control" />
        </div>

        <!-- ✅ NEW: Status dropdown -->
        <div class="col-md-2">
            <label for="Status" class="form-label">Status</label>
            <select id="Status" name="Status" class="form-select">
                <option value="">-- All --</option>
                @foreach (var value in Enum.GetValues(typeof(GameStatus)))
                {
                    <option value="@value" selected="@(Model.Status == (GameStatus)value ? "selected" : null)">
                        @(((GameStatus)value).GetDisplayName())
                    </option>
                }
            </select>
        </div>


        <div class="col-md-1 d-flex">
            <button type="submit" class="btn btn-primary w-100 me-2">Search</button>
        </div>
    </div>
</form>


<!-- 🎮 GAME LIST -->
@if (Model.Games != null && Model.Games.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Release Year</th>
                <th>Genre</th>
                <th>Platform</th>
                <th>Rating</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var g in Model.Games)
                {
                    <tr>
                        <td>@g.Title</td>
                        <td>@g.releaseYear</td>
                        <td>@g.Genre</td>
                        <td>@g.Platform</td>
                    <td>
                        @if (g.Stars != null)
                        {
                            // Filled stars
                            for (int i = 0; i < g.Stars.Stars; i++)
                            {
                                @:<span style="color: gold; font-size: 1.2rem;">★</span>
                            }

                            // Empty stars
                            for (int i = g.Stars.Stars; i < 5; i++)
                            {
                                @:<span style="color: lightgray; font-size: 1.2rem;">☆</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No rating</span>
                        }
                    </td>
                        <td>@g.Status.GetDisplayName()</td>
                    <td>
                        <a asp-page="/View" asp-route-id="@g.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-page="/Delete" asp-route-id="@g.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-page="/Edit" asp-route-id="@g.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="/Rating" asp-route-id="@g.Id" class="btn btn-sm btn-info">Add Rating</a>
                        <a asp-page="/EditRating"
                           asp-route-gameId="@g.Id"
                           asp-route-ratingId="@(g.Stars?.Id)"
                           class="btn btn-sm btn-warning">
                            Edit Rating
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No games have been added to the list yet, click on "Add new game" to add a new game!</p>
}
