@page "{id:int}"
@model GTracker.Pages.EditModel
@{
    ViewData["Title"] = "Edit Game";
}

<h1>Edit Game</h1>

@if (Model.Game == null)
{
    <p class="text-danger">Game not found.</p>
}
else
{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Game.Id" />


        <div class="mb-3">
            <label asp-for="Game.Title" class="form-label"></label>
            <input asp-for="Game.Title" class="form-control" />
            <span asp-validation-for="Game.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Game.releaseYear" class="form-label"></label>
            <input asp-for="Game.releaseYear" class="form-control" type="number" />
        </div>

       <div class="mb-3">
         <label asp-for="Game.Platform" class="form-label">Platform</label>
     <select asp-for="Game.Platform" class="form-select">
     <option value="">-- Select Platform--</option>
     <option value="Wii">Wii</option>
     <option value="PC">PC</option>
     <option value="PS4">PS4</option>
     <option value="PS5">PS5</option>
     <option value="GameCube">GameCube</option>
     <option value="Nintendo 64">Nintendo 64</option>
     <option value="Virtual Boy">Virtual Boy</option>
     <option value="Atari 2600">Atari 2600</option>
     <option value="3DS">3DS</option>
     <option value="Gameboy">Gameboy</option>
     <option value="NES">NES</option>
     <option value="SNES">SNES</option>
     <option value="PS2">PS2</option>
     <option value="DS">DS</option>
     <option value="Switch">Switch</option>
     <option value="Wii U">Wii U</option>
     <option value="PSP">PSP</option>
     </select>
        <span asp-validation-for="Game.Platform" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Game.releaseYear" class="form-label">Release Year</label>
        <input asp-for="Game.releaseYear" type="number" class="form-control" min="1960" max="2100" />
        <span asp-validation-for="Game.releaseYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
    <label asp-for="Game.Genre" class="form-label">Genre</label>
<select asp-for="Game.Genre" class="form-select">
    <option value="">-- Select Genre --</option>

    <option value="Action">Action</option>
    <option value="Action Adventure">Action Adventure</option>
    <option value="Adventure">Adventure</option>

    <option value="RPG">RPG</option>
    <option value="JRPG">JRPG</option>
    <option value="Action RPG">Action RPG</option>
    <option value="Tactical RPG">Tactical RPG</option>

    <option value="Platformer">Platformer</option>
    <option value="2D Platformer">2D Platformer</option>
    <option value="3D Platformer">3D Platformer</option>

    <option value="Shooter">Shooter</option>
    <option value="FPS">FPS</option>
    <option value="TPS">TPS</option>

    <option value="Rhythm">Rhythm</option>
    <option value="Rhythm Action">Rhythm Action</option>

    <option value="Puzzle">Puzzle</option>
    <option value="Strategy">Strategy</option>
    <option value="RTS">RTS</option>
    <option value="Turn-Based Strategy">Turn-Based Strategy</option>

    <option value="Simulation">Simulation</option>
    <option value="Life Simulation">Life Simulation</option>
    <option value="Management">Management</option>

    <option value="Sports">Sports</option>
    <option value="Racing">Racing</option>

    <option value="Horror">Horror</option>
    <option value="Survival Horror">Survival Horror</option>

    <option value="Interactive Drama">Interactive Drama</option>
    <option value="Visual Novel">Visual Novel</option>

    <option value="Episodic Adventure">Episodic Adventure</option>
    <option value="Indie">Indie</option>
</select>

     <span asp-validation-for="Game.Genre" class="text-danger"></span>
    </div>


        <div class="mb-3">
            <label asp-for="Game.Status" class="form-label"></label>
            <select asp-for="Game.Status" class="form-select"
                    asp-items="Html.GetEnumSelectList<GTracker.Models.GameStatus>()">
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Box Art</label>

            @if (Model.Game?.BoxArt != null)
            {

                <div class="small text-success mb-1">
                    ✔ An image is already uploaded
                </div>

                <div class="mb-2">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Game.BoxArt)"
                         class="img-fluid rounded shadow"
                         style="max-width:400px;"
                         alt="Current Box Art" />
                    <div class="text-muted small">
                        Current image (already saved)
                    </div>
                </div>
            }

            <input type="file"
                   asp-for="UploadedImage"
                   class="form-control" />

            <small class="form-text text-muted">
                Choose a new image only if you want to replace the current one
            </small>
        </div>


         <div class="mb-3">
            <label class="form-label">Game Screenshot</label>

            @if (Model.Game?.Screenshot != null)
            {

                <div class="small text-success mb-1">
                    ✔ An image is already uploaded
                </div>

                <div class="mb-2">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Game.Screenshot)"
                         class="img-fluid rounded shadow"
                         alt="Current Game Screenshot" />
                    <div class="text-muted small">
                        Current image (already saved)
                    </div>
                </div>
            }

            <input type="file"
                   asp-for="UploadedScreenImage"
                   class="form-control" />
                    <span asp-validation-for="UploadedScreenImage" class="text-danger"></span>

            <small class="form-text text-muted">
                Choose a new screenshot only if you want to replace the current one
            </small>
        </div>




        <div class="mb-3">
            <label asp-for="Game.Notes" class="form-label"></label>
            <textarea asp-for="Game.Notes" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
